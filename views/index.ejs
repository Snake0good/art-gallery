<%- include('partials/header') -%>

<main class="w-full">
    <div class="h-96 md:h-[500px] flex flex-col place-items-center bg-cover bg-center" style="background-image: url('https://images.unsplash.com/photo-1545781287-82be77a9695b?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1946&q=80');">
        <div class="flex flex-col place-items-center w-full h-full bg-black/40 text-white">
            <div class="flex flex-col place-items-center md:w-[700px] md:mt-20 p-10 leading-loose">
                <h1 class="text-3xl md:text-5xl my-5 text-center font-bold">Explore High Street's Leading Designs Portfolios</h1>
                <h2 class="text-center text-xl md:w-[450px]">1000s of Local Artists and designers have joined to share their work and on High Street Art Gallery - it is Seaford's home to the city's and state's best design and crative professionals.</h2>   
            </div>
        </div>
    </div>



    <div class="w-full p-3 my-10">
        <h1 class="text-3xl md:text-5xl text-center">Take a look at our recent submissions</h1>
        <div class="row justify-content-center mt-5">
            <ul class="w-full flex flex-wrap">
                <% let postsLength = Math.min(10, posts.length) %>
                <% for(var i=0; i<postsLength; i++) {%>
                    <li class="w-full md:w-1/4 lg:w-1/5 cursor">
                        <a href="/post/<%= posts[i]._id%>" class="w-full h-full">
                            <div class="p-3 h-full">
                                <div class="rounded-xl w-full overflow-hidden hover:shadow-xl hover:scale-105 duration-300">
                                    <img src="<%= posts[i].image%>" class="object-cover h-[400px] w-full">
                                </div>
                            </div>
                        </a>
                    <h1><% posts[i].user.userName %></h1>
                    </li>
                <% } %>
            </div>
        </ul>
    </div>
</main>


    

<%- include('partials/footer') -%>